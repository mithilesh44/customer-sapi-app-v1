<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<sub-flow name="error-response-subFlow" doc:id="431fe509-4207-4069-b83a-ad6b8635e003" >
		<ee:transform doc:name="Transform Message for error request" doc:id="1720012a-8ce3-41ee-a838-d081f92d4529">
                    <ee:message>
                        <ee:set-payload><![CDATA[%dw 2.0
output application/json
---

{
  "msg": "successful operation",
  "code": vars.code,
  "success": true,
  "eventId": attributes.headers.'x-cms-transactionId',
  "error": {
    "type": vars.errorType,
    "title": vars.title,
    "details": vars.details
  }
}]]></ee:set-payload>
                    </ee:message>
                    <ee:variables>
                    </ee:variables>
                </ee:transform>
	</sub-flow>
	<sub-flow name="intialise-request-data-subFlow" doc:id="0c27d71a-f88b-4bdf-b40b-f771d48b731a" >
		<ee:transform doc:name="Transform Message initialise variable" doc:id="eb47db6a-93c5-4df7-a45f-e7d1af2edcd6">
			<ee:message>
			</ee:message>
			<ee:variables>
				<ee:set-variable variableName="headers"><![CDATA[attributes.headers default""]]></ee:set-variable>
				<ee:set-variable variableName="queryParams"><![CDATA[attributes.queryParams default ""]]></ee:set-variable>
				<ee:set-variable variableName="UriParams"><![CDATA[attributes.UriParams default ""]]></ee:set-variable>
				<ee:set-variable variableName="requestPayload"><![CDATA[payload default ""]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
	</sub-flow>
</mule>
